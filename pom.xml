			<email>ernest.micklei@philemonworks.com</email>
			<organization>PhilemonWorks</organization>
		</developer>
		<developer>
			<name>Maarten van Hulsentop</name>
			<id>maarten</id>
			<email>maarten@vanhulsentop.nl</email>
			<organization>PhilemonWorks</organization>
		</developer>
	</developers>
	
	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>3.8.1</version>
			<scope>test</scope>
		</dependency>
		
		<dependency>
			<groupId>com.philemonworks</groupId>
			<artifactId>philemon-commons</artifactId>
			<version>1.1</version>
		</dependency>
		
		<dependency>
			<groupId>com.philemonworks</groupId>
			<artifactId>philemon-itable</artifactId>
			<version>1.0-SNAPSHOT</version>
		</dependency>
		
		<dependency>
			<groupId>commons-httpclient</groupId>
			<artifactId>commons-httpclient</artifactId>
			<version>3.0</version>
			<scope>provided</scope>
		</dependency>
		
		<!-- dependency>
			<groupId>swt</groupId>
			<artifactId>runtime</artifactId>
			<version>3.0.1</version>
			<scope>provided</scope>
		</dependency -->
		
		<dependency>
			<groupId>swt</groupId>
			<artifactId>swt-win32</artifactId>
			<version>3235</version>
			<scope>provided</scope>
		</dependency>
		
		<dependency>
			<groupId>jnlp</groupId>
			<artifactId>jnlp</artifactId>
			<version>1.5</version>
			<scope>provided</scope>
		</dependency>
		
		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>servlet-api</artifactId>
			<version>2.4</version>
			<scope>provided</scope>
		</dependency>
		
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.4</source>
					<target>1.4</target>
				</configuration>
			</plugin>
			
			<plugin>
				<artifactId>maven-source-plugin</artifactId>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			
		</plugins>
	</build>
	<distributionManagement> 
		<site>
			<id>website-philemonworks</id>
