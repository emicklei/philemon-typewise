	<modelVersion>4.0.0</modelVersion>
	<groupId>com.philemonworks</groupId>
	<artifactId>philemon-typewise</artifactId>
	<packaging>jar</packaging>
	<version>1.0-rc101</version>
	<name>Philemon TypeWise</name>
	<url>http://www.typewise.org</url>
	
